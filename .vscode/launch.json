        {
            "name": "Windowless Release",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/release/cef-ui-windowless",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cef-build-windowless-release"
        },
        {
            "name": "macOS Simple Debug",
            "type": "lldb",
            "request": "launch",
