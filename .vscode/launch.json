    "version": "0.2.0",
    "configurations": [
        {
            "name": "Simple Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/cef-ui-simple",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cef-build-simple-debug"
        },
        {
            "name": "Simple Release",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/release/cef-ui-simple",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cef-build-simple-release"
        },
        {
            "name": "Windowless Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/cef-ui-windowless",
            "cwd": "${workspaceFolder}",
